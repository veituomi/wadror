<% cache @brewery do %>

  <h2><%= @brewery.name %>
    <% if not @brewery.active  %>
        <span class="label label-info">retired</span>
    <% end %>
  </h2>
  
  <p>
    <em>Established year:</em>
    <%= @brewery.year %>
  </p>
  
  <p>
    Number of beers 
    <%= @brewery.beers.count %>
  </p>
  
  <ul>
  <% @brewery.beers.each do |beer| %>
    <li><%= link_to beer.name, beer %></li>
  <% end %>
  </ul>

<% end %>

<p>
  <% if @brewery.ratings.empty? %>
    No ratings
  <% else %>
    Has <%= pluralize @brewery.ratings.count, 'rating' %>, average <%= round @brewery.average_rating %>
  <% end %>
</p>

<%= link_to "change activity", toggle_activity_brewery_path(@brewery.id), method: :post, class: "btn btn-default" %>

<%= edit_and_destroy_buttons @brewery %>