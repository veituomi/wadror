<h1>Listing Beers</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Style</th>
      <th>Brewery</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= link_to beer.name, beer %></td>
        <td><%= link_to beer.style, beer.style %></td>
        <td><%= link_to beer.brewery.name, beer.brewery %></td>
        <!--<% if current_user %>
          <td><%= link_to 'Edit', edit_beer_path(beer) %></td>
          <td><%= link_to 'Destroy', beer, class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to('New Beer', new_beer_path, class:"btn btn-default") if current_user %>